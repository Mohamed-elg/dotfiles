{
  // Workspaces
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": false,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 0
    }
  },
  // Taskbar
  "wlr/taskbar": {
    "format": "{icon}",
    // "icon-size": 15,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "rewrite": {
      "Alacritty": "Term"
    }
  },
  // Hyprland Window
  "hyprland/window": {
    "rewrite": {
      "(.*)Chromium": "Chromium",
      "(.*)Code": "Code",
      "(.*)Discord": "Discord"
    },
    "separate-outputs": true
  },
